<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context="com.example.android.linuxquiz.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/question1"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="du"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans1_wr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ds"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans1_wr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans1_wr3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="dds"
                android:textSize="16sp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:background="#808080" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/question2"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ans2_wrong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id -u"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ans2_wrong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ans2_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="whoami"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ans2_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="echo $USER"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:background="#808080" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/question3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/hint_for_q3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/expl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:background="#808080" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/question4"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ans4_wr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cd ."
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cd .."
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans4_wr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cd ..."
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ans4_wr3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="rm .."
                android:textSize="16sp" />
        </RadioGroup>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:background="#808080" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/question5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ans5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/hint_for_q5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/expl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:onClick="checkAnswers"
            android:text="@string/check" />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:textSize="24sp" />


        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:onClick="shareResult"
            android:text="@string/share_button_label"
            android:visibility="gone" />

        <Button

            android:id="@+id/seeans_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:onClick="seeAnswers"
            android:text="@string/see_answers"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>